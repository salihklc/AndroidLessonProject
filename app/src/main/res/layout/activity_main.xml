<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
     tools:context=".MainActivity"
    android:weightSum="100"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_weight="70"
      android:orientation="vertical"
      android:layout_height="match_parent"
      android:background="#CC000000"
      >

      <!-- buralara Welcome falan gelebilir ..  -->
  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="30"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="#CC000000"
        >

        <EditText
            android:layout_margin="30dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:id="@+id/searchValue"
            android:hint="Şarkı adı / Şarkıcı Veya kategori giriniz.."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="100">
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="50"
            android:layout_height="wrap_content"
            android:id="@+id/chordSearchButton"
            android:layout_margin="20dp"
            android:text="Akor Ara"
            android:onClick="akorAra"
            android:textColor="#000000"
            android:textColorHint="#ffffff"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="50"
            android:layout_height="wrap_content"
            android:id="@+id/tabSearchButton"
            android:layout_margin="20dp"
            android:onClick="tabAra"
            android:text="Tab Ara"
            android:textColor="#000000"
            android:textColorHint="#ffffff"
            />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
